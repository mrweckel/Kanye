<section id="about" class="home-section text-center">
  <div class="heading-about">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <div class="section-heading">
            <h2>Top Pitches</h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
    <% counter = 1 %>
      <% while counter <= 6 %>
        <div class="col-xs-4 col-sm-4 col-md-4">
          <div class="team boxed-grey">
            <div class="inner">
              <h3><%= link_to @pitches.find(counter).title, pitch_path(@pitches.find(counter)) %></h3>
              <iframe class="iframe-yt" width="300" height="169" src=<%= @pitches.find(counter).url %> frameborder="0" allowfullscreen></iframe>
            </div>
          </div>
        </div>
        <% counter +=1 %>
      <% end %>
    </div>
  </div>
</section>
