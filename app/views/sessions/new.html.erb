<body class="bg-2">
	<div class="container">
		<div class="row">
			<div class="col-xs-4 col-sm-4 col-md-4"></div>
			<div class="col-xs-4 col-sm-4 col-md-4">
				<div id="signup-form">
					<h1>Log In</h1>
					<%=form_tag log_in_path do%>
					<%=label_tag :username %>
					<%=text_field_tag :username %>
					<br>
					<%=label_tag :password %>
					<%=password_field_tag :password %>
					<br>
					<%=submit_tag "Log in" %>
					<%end%>
					<%= link_to 'Back', pitches_path %>
				</div>
			</div>
			<div class="col-xs-4 col-sm-4 col-md-4"></div>
		</div>
	</div>
</body>